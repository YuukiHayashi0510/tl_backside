<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>新しい質問の投稿</h1>
      <%= form_for @question do |f| %>

        <div class="form-group">
          <%= f.label :質問内容 %><br>
          <%= f.text_area :body, class: "form-control", id: "exampleFormControlTextarea1", rows: "5" %>
        </div>

        <div class="field">
          <%= f.label :画像 %>
          <%= f.file_field :image %>
        </div>

        <%= f.submit "質問する", class: "btn btn-outline-primary", id: "submit-button" %>
      <% end %>
      <%= link_to "質問一覧へ", top_index_path, class: "detail-li" %>
    </div>
  </div>
</div>