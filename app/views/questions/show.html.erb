<h1>Questions#show</h1>
<p>Find me in app/views/questions/show.html.erb</p>

<h3>質問の詳細</h3>
<div class="question">
  <%= image_tag @question.image_url, size: "250x200" if @question.image? %>
  <p><%= @question.body %></p>
  <p><%= @question.created_at %></p>
</div>

<div class="answer-wrapper">
  <p>回答一覧</p>
  <% @answers.each do |c| %>
    <div>
      <%= c.user.name unless c.user.blank? %>
      <br>
      <%= c.body %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@question,@answer], local: true) do |f| %>
      <%= f.text_area :body %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> 回答する
      <% end %>
    <% end %>
  <% end %>
</div>

<% if user_signed_in? %>
  <% if current_user.already_liked?(@question) %>
    <%= link_to tweet_like_path(@question), method: :delete do %>
      <p>いいねを取り消す</p><%= @question.likes.count %>
    <% end %>
  <% else %>
    <%= link_to tweet_likes_path(@question), method: :post do %>
      <p>いいね</p><%= @question.likes.count %>
    <% end %>
  <% end %>
<% else %>
  <p>いいねの数 = </p><%= @question.likes.count %>
<% end %>

<h2>いいねしたユーザー</h2>
<% @question.liked_users.each do |user| %>
  <li><%= user.name %></li>
<% end %>


<%= link_to "編集する", edit_question_path(@question.id) %>
<%= link_to "一覧に戻る", top_index_path %>