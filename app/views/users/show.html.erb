<%# users/show.html.erb %>

<h1>users#show</h1>
<%= image_tag @user.image_url, size: "250x200" if @user.image? %>
<p>名前 : <%= @user.name %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %><br /><br />

<h3>ユーザーの質問一覧</h3>
<% @user.questions.order("updated_at DESC").each do |t| %>
  <%= image_tag t.image_url, size: "150x100" if t.image? %><br />
  <%= t.body %><br />
  <%= t.updated_at.to_s(:datetime_jp) %>
  <br />
<% end %>

<br />
<h3>現在の講義一覧</h3>
<p>科目名：担当教員名</p>
<% @user.current_lectures.each do |t| %>
  <%= t.lecture.name %> ： <%= t.lecture.teacher %><%= link_to "詳細へ", lecture_path(t.lecture.id) %>
  <br />
<% end %>

<h3>取得済み講義一覧</h3>
<p>科目名：担当教員名</p>
<% @user.past_lectures.each do |t| %>
  <%= t.lecture.name %> ： <%= t.lecture.teacher %><%= link_to "詳細へ", lecture_path(t.lecture.id) %>
  <br />
<% end %>


<%= link_to "質問一覧に戻る",top_index_path %>