<h1>Evaluations#new</h1>
<p>Find me in app/views/evaluations/new.html.erb</p>
<p>新しい評価の作成</p>

<%= form_with model: @evaluation , url: evaluations_new_path ,local: true do |f| %>
    <%= f.hidden_field :lecture_id, value: params[:lecture_id] %>
    <div class="evaluation_form">
        <h3>評価投稿フォーム</h3>

        <h5>総合評価</h5>
        <div class="post_form">
            <%= f.radio_button :overall, 5 ,id: 'star1'%>
            <label for="star1"><span class="text">最高</span>★</label>

            <%= f.radio_button :overall, 4 ,id: 'star2'%>
            <label for="star2"><span class="text">良い</span>★</label>

            <%= f.radio_button :overall, 3 ,id: 'star3'%>
            <label for="star3"><span class="text">普通</span>★</label>

            <%= f.radio_button :overall, 2 ,id: 'star4'%>
            <label for="star4"><span class="text">悪い</span>★</label>

            <%= f.radio_button :overall, 1 ,id: 'star5'%>
            <label for="star5"><span class="text">最悪</span>★</label>
        </div>

        <h5>わかりやすさ</h5>
        <div class="post_form">
            <%= f.radio_button :understandability,  5 ,id: 'star6'%>
            <label for="star6"><span class="text">難しい</span>★</label>

            <%= f.radio_button :understandability,  4 ,id: 'star7'%>
            <label for="star7"><span class="text">やや難しい</span>★</label>

            <%= f.radio_button :understandability, 3 ,id: 'star8'%>
            <label for="star8"><span class="text">普通</span>★</label>

            <%= f.radio_button :understandability , 2 ,id: 'star9'%>
            <label for="star9"><span class="text">やや簡単</span>★</label>

            <%= f.radio_button :understandability , 1 ,id: 'star10'%>
            <label for="star10"><span class="text">簡単</span>★</label>
        </div>

        <h5>将来的有用性</h5>
        <div class="post_form">
            <%= f.radio_button :usefulness,  5 ,id: 'star11'%>
            <label for="star11"><span class="text">難しい</span>★</label>

            <%= f.radio_button :usefulness,  4 ,id: 'star12'%>
            <label for="star12"><span class="text">やや難しい</span>★</label>

            <%= f.radio_button :usefulness, 3 ,id: 'star13'%>
            <label for="star13"><span class="text">普通</span>★</label>

            <%= f.radio_button :usefulness, 2 ,id: 'star14'%>
            <label for="star14"><span class="text">やや簡単</span>★</label>

            <%= f.radio_button :usefulness, 1 ,id: 'star15'%>
            <label for="star15"><span class="text">簡単</span>★</label>
        </div>

        <h5>楽単具合</h5>
        <div class="post_form">
            <%= f.radio_button :easy,  5 ,id: 'star16'%>
            <label for="star16"><span class="text">難しい</span>★</label>

            <%= f.radio_button :easy,  4 ,id: 'star17'%>
            <label for="star17"><span class="text">やや難しい</span>★</label>

            <%= f.radio_button :easy, 3 ,id: 'star18'%>
            <label for="star18"><span class="text">普通</span>★</label>

            <%= f.radio_button :easy , 2 ,id: 'star19'%>
            <label for="star19"><span class="text">やや簡単</span>★</label>

            <%= f.radio_button :easy , 1 ,id: 'star20'%>
            <label for="star20"><span class="text">簡単</span>★</label>
        </div>

        <h5>課題・レポートの量</h5>
        <div class="post_form">
            <%= f.radio_button :assignment,  5 ,id: 'star21'%>
            <label for="star21"><span class="text">難しい</span>★</label>

            <%= f.radio_button :assignment,  4 ,id: 'star22'%>
            <label for="star22"><span class="text">やや難しい</span>★</label>

            <%= f.radio_button :assignment, 3 ,id: 'sta23'%>
            <label for="star23"><span class="text">普通</span>★</label>

            <%= f.radio_button :assignment, 2 ,id: 'star24'%>
            <label for="star24"><span class="text">やや簡単</span>★</label>

            <%= f.radio_button :assignment, 1 ,id: 'star25'%>
            <label for="star25"><span class="text">簡単</span>★</label>
        </div>

    </div>

    <%= f.submit '送信'%>

<% end %>